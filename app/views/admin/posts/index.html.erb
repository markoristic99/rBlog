<div class ="m-3">

<h2 class="ml-4">Posts <%= link_to "Create new", new_admin_post_path, class:'btn btn-success float-right mr-4'%></h2>

<br>

<% if @posts.exists? %>
    <table class = "table table-striped shadow-sm">
        <tr>
            <th>Post title</th>
            <th>Post category</th>
            <th>Date created</th>
            <th>Manager actions</th>
        </tr>

        <% @posts.each do |post|%>

        <tr>
            <td><%= post.title%></td>
            <td><%= post.category.name%></td>
            <td><%= post.created_at.to_time.strftime('%B %e at %l:%M %p')%></td>
            <td><%= link_to "Edit", edit_admin_post_path(post), class: 'btn btn-warning'%> <%= link_to "Delete", admin_post_path(post), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'}%></td>
        </tr>

        <% end %>
    </table>
    <%= will_paginate @posts%>
    <% else %>

    <p class="no-posts"> There are no posts </p>
<% end %>
</div>