<div class="card-body new-content">

<h2>Add new user</h2>
<%= form_for [:admin, @user] do |f|%>

	<% if @user.errors.any?%>
		<% @user.errors.full_messages.each do |msg|%>
			<div class ="alert alert-danger"><%= msg%></div>
		<%end%>
	<%end%>

    <div class="form-group">
		<%= f.text_field :name, {placeholder: 'Name', class:'form_input label'} %>
	</div>

	<div class="form-group">
		<%= f.text_field :email, {placeholder: 'Email', class:'form_input label'} %>
	</div>

	<div class="form-group">
		<%= f.password_field :password, {placeholder: 'Password', class:'form_input label'} %>
	</div>

    <div class="form-group">
		<%= f.password_field :password_confirmation, {placeholder: 'Password confirmation', class:'form_input label'}%>
	</div>

    <br>

    <div style="padding-left: 20px;">
    <%= f.submit "Submit", class:'btn btn-primary shadow' %>
	<%=link_to "Cancel", admin_posts_path, class:'btn btn-primary shadow'%>
    </div>

<% end %>

</div>

