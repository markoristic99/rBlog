<!-- Comments -->
<br>
<div class="card card-body comments">
  <h2><%= @post.comments.length %> Comments</h2>
  <% @post.comments.each do |comment| %>
  <div class="comment">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag("user.jpg") %>
      </div>
      <div class="col-md-10">
        <div class="card card-body">
          <h6><%= comment.name %><span>/<%= comment.created_at.to_time.strftime('%B %e at %l:%M %p') %></span></h6>
          <p class="card-text">
          <%= comment.body %>

          <%= link_to '[x]', [comment.post, comment], 
                method: :delete,
                data: {confirm: 'Are you sure?'} %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>      
</div>

  <div class="card card-body add-comment">
    <h2 class="page-heade pl-5">Add comment</h2>
    <%= form_for([@post, @post.comments.build]) do |f| %>
  
      <div class="form-group">
        <%= f.text_field :name, {placeholder: 'Name', class:'form_input label'} %>
      </div>
      <div class="form-group">
        <%= f.text_field :email,{placeholder: 'E-Mail', class:'form_input label'} %>
      </div>
      <div class="form-group">
        <%= f.text_area :body, {placeholder: 'Write your comment here...', class:'form_input label'} %>
      </div>
       <div class="form-group pl-5">
        <%= f.submit "Submit", class:'btn btn-primary' %>
      </div>
  <% end %>
</div>
